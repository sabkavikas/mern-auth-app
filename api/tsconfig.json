{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "types",
            "./node_modules/@types",
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/ormConfig.ts",
        "types/index.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "files": true
      },
}